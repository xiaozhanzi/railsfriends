<% if user_signed_in? %>

<h1>Friends</h1>


<table class="table table-striped table-hover">
  
  <thead class="table-dark">
    <tr>
      <th> Name </th>
      <!-- <th> Last name </th> -->
      <th> Email </th>
      <th> Phone </th>
      <th> Twitter</th>
      <th> userid</th>
      <th colspan="3"> </th>
    </tr> 
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
     <tr>
          <td>
<%= link_to friend.first_name + ' ' + friend.last_name, friend %>


          </td>
          
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %> 
             <% %>
             <!-- # friend.user_id  vs   #current_user.id  friend.user.inspect   -->
              
            </td>
           <td>
            <%= link_to 'Show', friend,  class: "btn btn-outline-danger btn-sm" %></td>

            
            <td> <%= link_to 'Edit', edit_friend_path(friend),  class: "btn btn-outline-danger btn-sm" %></td>
            <td> <%= button_to 'Delete', friend, method: :delete, data: { turbo_confirm: 'Are you sure?' } ,  class: "btn btn-outline-danger btn-sm" %>

           </td>
          

        </tr>
        <% end %>
        <% end %>





  </tbody>
</table>





<%= link_to "New friend", new_friend_path,class: "btn btn-success btn-sm" %>
 
